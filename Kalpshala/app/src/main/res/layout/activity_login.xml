<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg3"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.afreen.kalpshala.activity.LoginActivity"
    >

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-60dp"
        android:background="@drawable/logo"
        android:layout_gravity="center"
        />

    <EditText
        android:id="@+id/lg_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-40dp"
        android:drawableLeft="@drawable/email_2"
        android:drawablePadding="10dp"
        android:ems="14"
        android:hint="Enter Email Address"
        android:inputType="textEmailAddress"
        android:singleLine="true"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff" />

    <EditText
        android:id="@+id/lg_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lg_email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/password_2"
        android:drawablePadding="10dp"
        android:ems="14"
        android:hint="Enter Password"
        android:inputType="textPassword"
        android:singleLine="true"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff" />

    <Button
        android:id="@+id/lg_login"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/lg_password"
        android:layout_alignRight="@id/lg_password"
        android:layout_below="@id/lg_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="#64DD17"
        android:text="Login now"
        android:textColor="#ffffff"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/lg_forget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/lg_login"
        android:layout_below="@id/lg_login"
        android:layout_marginTop="20dp"
        android:text="Forget password?"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/lg_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/lg_login"
        android:layout_below="@id/lg_login"
        android:layout_marginTop="20dp"
        android:text="Sign up"
        android:textColor="#ffffff" />

</RelativeLayout>
